---
import { Translator } from '@utils/i18n.js';

import BaseLayout from "@layouts/BaseLayout.astro";
import ContentDoc from "@components/ui/ContentDoc.astro";

const translator = new Translator(Astro.currentLocale || 'en');


---

<BaseLayout>
  <div class="container mx-auto p-4">
    <ContentDoc file_name="Guide"/>
    <label class="cursor-pointer label" for="noGuide">
      <span class="label-text">{translator.t('guide.checkboxLabel')}</span>
      <input type="checkbox" name="noGuide" class="checkbox checkbox-primary" checked/>
    </label>
    <div class="flex justify-center">
      <button type="submit" class="btn text-btn m-2">{translator.t('guide.createProcessButton')}</button>
    </div>
  </div>
</BaseLayout>
