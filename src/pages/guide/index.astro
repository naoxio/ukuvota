---
import { t } from "astro-i18n";

import BaseLayout from "@layouts/BaseLayout.astro";
import ContentDoc from "@components/ui/ContentDoc.astro";

---

<BaseLayout>
  <div class="container mx-auto p-4">
    <ContentDoc file_name="Guide"/>
    <label class="cursor-pointer label" for="noGuide">
      <span class="label-text">{() => t('guide.checkboxLabel')}</span>
      <input type="checkbox" name="noGuide" class="checkbox checkbox-primary" checked/>
    </label>
    <div class="flex justify-center">
      <button type="submit" class="btn text-btn m-2">{() => t('guide.createProcessButton')}</button>
    </div>
  </div>
</BaseLayout>
