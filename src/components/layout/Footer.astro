---
import { Translator } from '~/utils/i18n.js';
const translator = new Translator(Astro.currentLocale || 'en');
---
<footer class="footer">
  <div class="footer-content">
    <span class="footer-item">
      <a class="footer-link" href="https://naox.io">NaoX</a>
      <span> Â© 2023</span>
    </span>
    <span class="footer-separator">&nbsp;-&nbsp;</span>
    <span class="footer-item">
      <a class="footer-link" href="/privacy-policy">{ translator.t('policy') }</a>
    </span>
  </div>
</footer>

<style>
  .footer {
    width: 100%;
    background-color: var(--footer-bg);
    color: var(--footer-text);
    padding: 1rem 0;
    margin-top: auto;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
  }

  .footer-item {
    margin: 0 0.5rem;
  }

  .footer-link {
    color: var(--footer-link);
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .footer-link:hover {
    opacity: 0.8;
  }

  .footer-separator {
    color: var(--footer-text);
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      align-items: center;
    }

    .footer-item {
      margin: 0.25rem 0;
    }

    .footer-separator {
      display: none;
    }
  }
</style>