---
import { t } from 'astro-i18n';
import { durationToSlider } from '@utils/logslider';


interface Props {
  id: string;
  duration: number;
}

const { id, duration } = Astro.props;
const initialSliderValue = durationToSlider(duration);

---  

<div id={id}> 
  <span>{ t('duration') }:&nbsp;</span>
  <span class="duration-display" class="text-success"></span>
  <br/>
  <input type="range" min="1" max="184" class="range" id="duration-slider" value={initialSliderValue} />
</div>