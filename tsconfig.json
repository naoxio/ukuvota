{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "paths": {
      "@content/*": ["content/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["utils/*"],
      "@layouts/*": ["layouts/*"],
      "@interfaces/*": ["interfaces/*"],
      "@components/*": ["components/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
